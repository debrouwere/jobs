[Unit]
Description=job scheduler
After=store.service
Requires=store.service

[Service]
EnvironmentFile=/etc/environment
ExecStartPre=/usr/bin/docker pull debrouwere/jobs
ExecStart=/usr/bin/docker run --name scheduler --link store:store --rm debrouwere/jobs tick --host store
ExecStartPost=/usr/bin/etcdctl set /jobs/scheduler ${COREOS_PUBLIC_IPV4}
ExecStop=/usr/bin/docker kill scheduler
ExecStopPost=/usr/bin/etcdctl rm /jobs/scheduler

[X-Fleet]
MachineOf=store.service